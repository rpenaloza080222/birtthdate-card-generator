---
import localProfilemage from "../images/profile-r.webp";
import Chronometer from "./react/Chronometer";
type Props = {
  date: string;
  color?: string;
  name: string;
  message: string;
  textColor?: string;
};

const {
  date,
  color = "via-pink-500",
  name,
  message,
  textColor = "text-pink-500",
} = Astro.props;

const viaColor = color;
let textClasses =
  "name font-bold text-3xl md:text-5xl transition-all duration-300 block bg-clip-text text-transparent bg-gradient-to-r from-black from-[20%]";
textClasses += "via-[40%] to-black to-[80%] " + color;
---

<div
  class="h-full w-full flex flex-col justify-center md:pt-11 items-center gap-5"
>
  <Chronometer textColor={textColor} date={date} client:only />

  <div
    class="flex flex-col-reverse items-center md:flex-row gap-1 md:gap-10 justify-center w-full"
  >
    <div class="size-[256px] rounded overflow-hidden">
      <img
        src={localProfilemage.src}
        alt={`Foto cumpleaños Roibert Peñaloza`}
        class="w-full h-full rounded-xl overflow-hidden animate-fade-in"
      />
    </div>
    <div
      class="flex flex-col items-center md:justify-center md:items-end md:h-full"
    >
      <h1 class="text-2xl md:text-4xl text-center md:text-left w-full">
        Feliz cumpleaños,
      </h1>
      <span class={textClasses}>{name}</span>
    </div>
  </div>
  <div class="flex justify-center w-full p-4 md:p-0">
    <p
      class="text-slate-900 text-md md:text-2xl text-pretty 2xl:max-w-[50%] md:max-w-[40%]"
    >
      {message}
    </p>
  </div>
</div>
<style>
  .name {
    animation: shine 3s linear infinite;
    background-size: 200% auto;
    background-clip: text;
  }

  @keyframes shine {
    to {
      background-position: 200% center;
    }
  }
</style>
