---
import Chronometer from "../components/react/Chronometer";
import MainLayout from "../layouts/MainLayout.astro";
import localProfilemage from "../images/profile-r.webp";

const currentYear = new Date().getFullYear()
const date = `${currentYear}-07-27`
---

<MainLayout>
  <div
    class="h-full w-full flex flex-col justify-center pt-11 items-center gap-5"
  >
    <Chronometer date={date} client:load />

    <div
      class="flex flex-col-reverse items-center md:flex-row gap-1 md:gap-10 justify-center w-full"
    >
      <div class="size-[256px] rounded overflow-hidden">
        <img
          src={localProfilemage.src}
          alt={`Foto cumpleaños Roibert Peñaloza`}
          class="w-full h-full rounded-xl overflow-hidden animate-fade-in"
        />
      </div>
      <div
        class="flex flex-col items-center md:justify-center md:items-end md:h-full"
      >
        <h1 class="text-2xl md:text-4xl text-center md:text-left w-full">
          Feliz cumpleaños,
        </h1>
        <span
          class={`
		 	name font-bold text-3xl md:text-5xl transition-all duration-300 block bg-clip-text text-transparent
			bg-gradient-to-r from-black from-[20%] via-pink-500 via-[40%] to-black to-[80%]
		  `}>Mayer José Peñaloza Mendoza</span
        >
      </div>
    </div>
    <div class="flex justify-center w-full p-4 md:p-0">
      <p class="text-slate-900 text-md md:text-2xl text-pretty 2xl:max-w-[50%] md:max-w-[40%]">
        Lorem ipsum dolor sit amet consectetur, adipisicing elit. Illum fuga
        saepe commodi, mollitia eum quod a, excepturi ab, tempora impedit
        officia vero temporibus nulla doloremque laborum numquam nobis aliquam
        dicta.
      </p>
    </div>
  </div>
</MainLayout>

<style>
  .name {
    animation: shine 3s linear infinite;
    background-size: 200% auto;
    background-clip: text;
  }

  @keyframes shine {
    to {
      background-position: 200% center;
    }
  }
</style>
